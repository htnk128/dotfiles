    email = tanaka_hiroaki@cyberagent.co.jp

[github]
    user = hiroaki-tanaka128

[core]
    ignorecase = false
    editor = vim
	excludesfile = ~/.gitignore_global

[url "git@github.com:"]
    insteadOf = https://github.com/

[color]
    ui = auto
    diff = auto
    grep = auto
    branch = auto
    interactive = auto

[grep]
    lineNumber = true

[pull]
	rebase = false

[push]
    default = current

[commit]
	template = ~/.stCommitMsg

[init]
	defaultBranch = main
	templatedir = ~/.git-templates/git-secrets

[ghq]
root = ~/go/src
